<div>
  <p class="h3">
    <% if params[:query].blank? %>
      <%= pluralize carers.count, 'carer' %> available
    <% else %>
      <%= pluralize carers.count, 'result' %> for <code><%= params[:query] %></code>
    <% end %>
  </p>
  <div class="carers">
    <% carers.each do |carer| %>
      <%= render 'carers_infos', carer: carer %>
    <% end %>
  </div>
</div>
