<%= month_calendar(events: @bookings, attribute: :start_date, end_attribute: :end_date) do |date, bookings| %>
  <%= date %>
    <% bookings.each do |booking| %>
    <div class="booking">
        <% if booking.carer_confirmed? %>
          <div class = confirmed >
            <p><%= User.find((Patient.find(booking.patient_id)).user_id).last_name %></p>
          </div>
          <% else %>
            <div class = notconfirmed >
              <p><%= User.find((Patient.find(booking.patient_id)).user_id).last_name %></p>
            </div>
        <% end %>
    </div>
    <% end %>
<% end %>
