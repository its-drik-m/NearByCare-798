<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="h2 my-3 d-flex justify-content-center">Select a carer</h1>

        <div data-controller="search-carers">
        <%= form_with url: carers_path, method: :get, html: { data: { search_carers_target: 'form' } } do |f| %>
            <%= f.text_field :query,
                            class: "form-control",
                            placeholder: 'Choose by region and by specialty',
                            value: params[:query],
                            data: {
                            search_carers_target: 'searchInput',
                            action: "keyup->search-carers#update"
                            } %>
        <% end %>
        <%= render 'cards', carers: @carers %>
      </div>
    </div>
  </div>
