<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="h2 my-3 d-flex justify-content-center">Select a carer</h1>

        <div>
        <div data-controller="refresh-list">
        <%= form_with url: carers_path, method: :get, html: { data: { refresh_list_target: 'form' } } do |f| %>
            <%= f.text_field :query,
                            class: "form-control",
                            placeholder: 'Choose by region and by specialty',
                            value: params[:query],
                            data: {
                            refresh_list_target: 'searchInput',
                            action: "keyup->refresh-list#update"
                            } %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'list', carers: @carers %>
