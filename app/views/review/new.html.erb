<h1>Write a review about your booking %></h1>

<div>
  <%= simple_form_for(@review, :url => carer_reviews_path(@carer) , :html => { :method => :post }) do |f| %>
    <%= f.error_messages %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <%= f.submit %>
  <% end %>
</div>
