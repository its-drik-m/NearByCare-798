<% if current_user.carer? %>
  <div class="booking-card-outline">
  </div>
    <div class="container">
      <h3>Do you want to confirm appointment with <%= User.find((Patient.find(@booking.patient_id)).user_id).last_name %></h3>
        <div class="carer-new-form">
          <div class="row">
            <div class="col">
              <div class="form p-3">
                <%= render 'bookedpatient', booking: @booking %>
                <%= render 'carerconfirm', booking: @booking %>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% else %>
    <div class="container_2">
        <div class="patient-new-form">
          <div class="row">
            <div class="col">
              <div class="form p-3">
              <%= render 'bookedcarer', booking: @booking %>
                <%= render 'form', booking: @booking %>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
