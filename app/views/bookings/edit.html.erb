<% if current_user.carer? %>
  <div class="container">
    <h3>Do you want to confirm appointment with <%= User.find(Patient.find(@booking.patient_id)).last_name %></h3>
      <div class="carer-new-form">
        <div class="row">
          <div class="col">
            <div class="form p-3">
              <%= render 'carerconfirm', booking: @booking %>
            </div>
          </div>
        </div>
      </div>
<% else %>
  <div class="container_2">
      <div class="patient-new-form">
        <div class="row">
          <div class="col">
            <div class="form p-3">
              <%= render 'form', booking: @booking %>
            </div>
          </div>
        </div>
      </div>
  </div>
<% end %>
