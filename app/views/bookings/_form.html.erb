  <div class="card">
    <%= simple_form_for [@carer, @booking] do |f| %>
      <h3>Book <%= User.find(@carer.id).first_name%> <%= User.find(@carer.id).last_name%> !</h3>
      <%= f.input :start_date, as: :datetime, placeholder: 04/06/2022 %>
      <%= f.input :end_date, as: :datetime, placeholder: 06/06/2022%>
      <%= f.submit class: 'btn btn-green' %>
    <% end %>
  </div>
