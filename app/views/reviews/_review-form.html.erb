<%= simple_form_for [@booking, @review], data: { controller: "star" } do |f| %>
  <%= f.input :rating, collection: Review::RATING, input_html: {data: { controller: "star", action: "click->star#rate"}} %>
  <%= f.input :comment, as: :text, placeholder: "Write a comment" %>
  <%= f.submit class: "btn-submit-carer" %>
<% end %>
