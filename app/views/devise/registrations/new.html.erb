<%= render "devise/shared/links" %>

<div class="container">
  <div class="row register-card">
    <div class="col-xs-12 col-sm-4 col-dm-offset-4">
      <div class="form-group">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="basic-form-inputs">
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "new-lastname" }%>
            <%= f.input :first_name,
                        required: true,
                        input_html: { autocomplete: "new-firstname" }%>
            <%= f.input :phone_number %>
            <%= f.input :email,
                        required: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
                <%# <%= f.select :role do%>
                  <%# <option value="">Purpose ?</option>
                  <option value="patient">Request for assistance</option>
                  <option value="carer">Provide assistance</option>
                <%end%>
          </div>

          <div class="row">
            <div class="btn btn-submit">
              <div class="form-actions">
                <%# if any input is empty disable button %>
                <% if f.object.errors.any? %>
                <div class="btn disabled">
                  <%= f.button :submit, "Sign up" %>
                </div>
                <% else %>
                  <%= f.button :submit, "Sign up" %>
                <% end %>

            </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
